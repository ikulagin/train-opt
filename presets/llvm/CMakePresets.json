{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21
    },
    "configurePresets": [
        {
            "name": "base",
            "displayName": "base",
            "generator": "Ninja",
            "binaryDir": "$env{llvm-workdir}/llvm-build-${presetName}",
            "toolset":{},
            "environment": {
                "llvm-workdir": "${sourceParentDir}/../llvm-workdir"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                
                "BUILD_SHARED_LIBS": "On",
                
                "LLVM_CCACHE_BUILD": "On",
                "LLVM_ENABLE_LIBCXX": "On",
                "LLVM_USE_LINKER": "lld",
                "LLVM_ENABLE_RTTI": "On",
                "LLVM_BUILD_TESTS": "On",
                "LLVM_ENABLE_DUMP": "On",
                "LLVM_ENABLE_ASSERTIONS": "On",
                "LLVM_TARGETS_TO_BUILD": "X86",

                "LLVM_ENABLE_PROJECTS": ""
            }
        },
        {
            "name": "debug",
            "inherits":["base"],
            "displayName": "Debug",
            "generator": "Ninja",
            "toolset":{},
            "environment": {},
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "inherits":["base"],
            "displayName": "Release",
            "generator": "Ninja",
            "toolset":{},
            "environment": {},
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "relwithdebinfo",
            "inherits":["base"],
            "displayName": "RelWithDebInfo",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        }

    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "configurePreset": "release"
        },
        {
            "name": "relwithdebinfo",
            "configurePreset": "relwithdebinfo"
        }
    ]
}